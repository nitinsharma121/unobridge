<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/gray_view_color"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.companyDetails.CompanyDetailsFragment">

        <TextView
            android:id="@+id/tvRightsReserved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="@string/rights_reserved"
            android:textColor="@color/input_field_title"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:src="@drawable/company_details_mock"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:scaleX="1.11"
                android:scaleY="1.1"
                android:layout_height="wrap_content"/>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>