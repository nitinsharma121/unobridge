<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="frontImage"
            type="String" />
        <variable
            name="backImage"
            type="String" />

        <variable
            name="clickHandler"
            type="com.provider.unobridge.ui.fragments.profile.AaadharDetailsFragment.ClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gStartOuter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />

        <include
            android:id="@+id/tToolbar"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glTopHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_30"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glTopHorizontal">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gStartInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.072" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.08" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.92" />

                <TextView
                    android:id="@+id/tvProfilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_view_start_padding"
                    android:fontFamily="@font/averta_bold"
                    android:text="@string/aadhar_images"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@id/gStart"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAaadharFront"
                    android:layout_width="@dimen/margin_125"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->clickHandler.clickAaadharFrontImage()}"
                    android:layout_marginTop="@dimen/margin_30"
                    app:layout_constraintEnd_toStartOf="@id/clAaadharBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvProfilePic">

                    <include
                        android:id="@+id/ivEmptyFront"
                        layout="@layout/user_image_empty_recycler_item" />

                    <ImageView
                        android:id="@+id/ivImageFront"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_180"
                        bind:imageUrl="@{frontImage}"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/averta_regular"
                        android:text="@string/front"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintEnd_toEndOf="@id/ivImageFront"
                        app:layout_constraintStart_toStartOf="@id/ivImageFront"
                        app:layout_constraintTop_toBottomOf="@id/ivImageFront" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAaadharBack"
                    android:onClick="@{()->clickHandler.clickAaadharBackImage()}"
                    android:layout_width="@dimen/margin_125"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clAaadharFront"
                    app:layout_constraintTop_toBottomOf="@id/tvProfilePic">

                    <include
                        android:id="@+id/ivEmptyBack"
                        layout="@layout/user_image_empty_recycler_item" />

                    <ImageView
                        android:id="@+id/ivImageBack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_180"
                        android:adjustViewBounds="true"
                        bind:imageUrl="@{backImage}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/averta_regular"
                        android:text="@string/back"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintEnd_toEndOf="@id/ivImageBack"
                        app:layout_constraintStart_toStartOf="@id/ivImageBack"
                        app:layout_constraintTop_toBottomOf="@id/ivImageBack" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvAaadharNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:fontFamily="@font/averta_bold"
                    android:maxLength="500"
                    android:maxLines="5"
                    android:text="@string/aadhar_no"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@id/gStart"
                    app:layout_constraintTop_toBottomOf="@id/clAaadharFront" />


                <EditText
                    android:id="@+id/eAadharNo"
                    style="@style/editTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/aadhar_no"
                    android:inputType="number"
                    android:maxLength="14"
                    android:paddingBottom="@dimen/padding_edit_text_bottom"
                    android:singleLine="true"
                    app:layout_constraintEnd_toEndOf="@id/gEnd"
                    app:layout_constraintStart_toStartOf="@id/gStart"
                    app:layout_constraintTop_toBottomOf="@id/tvAaadharNo" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
