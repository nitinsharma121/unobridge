<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.provider.unobridge.data.responeClasses.ResponseStatesItem" />
    </data>

    <carbon.widget.ConstraintLayout
        android:id="@+id/clView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp"
        app:carbon_cornerRadius="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <carbon.widget.ImageView
                android:id="@+id/ivPic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                app:cardCornerRadius="@dimen/_14sdp"
                bind:imageUrl="@{item.fullImageUrl}"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/ivPic"
                app:layout_constraintTop_toTopOf="@id/ivPic" />

            <TextView
                android:id="@+id/tvStateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/averta_bold"
                android:text="@{item.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPic" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/averta_regular"
                android:text="@{`View ` + item.name + `\nState rides`}"
                android:textColor="@color/grey"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStateName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </carbon.widget.ConstraintLayout>
</layout>
